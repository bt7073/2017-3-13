const byte LED = 13;

void setup() 
{
  Serial.begin(9600);
  Serial.println("Hello,World!");
}

void loop() 
{
  int val;
  if(Serial.available())
  {
    val = Serial.read();
    if (val == '1')
    {
      digitalWrite(LED,HIGH);
      Serial.println("LED ON");
    }
    else if(val == '0')
    {
      digitalWrite(LED,LOW);
      Serial.println("LED OFF");
    }
  }  
}
